<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.camiloandresibarrayepes.pruebafoto3.Main2Activity"
    android:background="@drawable/fondo_adda_3">

    <AbsoluteLayout
        android:layout_width="322dp"
        android:layout_height="493dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.31">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="88dp"
            android:layout_height="140dp"
            android:layout_x="117dp"
            android:layout_y="0dp"
            app:srcCompat="@drawable/addalogo2_1"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="64dp" />

        <Button
            android:id="@+id/button_se_parte"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_x="168dp"
            android:layout_y="183dp"
            android:background="@drawable/op2"
            tools:layout_editor_absoluteX="71dp"
            tools:layout_editor_absoluteY="206dp" />

        <Button
            android:id="@+id/button_info"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_x="0dp"
            android:layout_y="349dp"
            android:onClick="button_info"
            android:background="@drawable/op3"
            tools:layout_editor_absoluteX="71dp"
            tools:layout_editor_absoluteY="206dp" />

        <Button
            android:id="@+id/Button_denuncia"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_x="0dp"
            android:layout_y="183dp"
            android:background="@drawable/op1"
            android:onClick="denuncias"
            tools:layout_editor_absoluteX="71dp"
            tools:layout_editor_absoluteY="206dp" />

        <Button
            android:id="@+id/button_llamada"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_x="168dp"
            android:layout_y="350dp"
            android:background="@drawable/op4"
            android:onClick="llamadas"
            tools:layout_editor_absoluteX="71dp"
            tools:layout_editor_absoluteY="206dp" />

    </AbsoluteLayout>


</android.support.constraint.ConstraintLayout>
